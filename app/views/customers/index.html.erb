<p id="notice"><%= notice %></p>
<div class="row">
  <div class="col s12">
    <div class="col s12 m4 l4"><p></p></div>
    <div class="col s12 m4 l4 text-align: center">
      <%= search_form_for @q do |f| %>
        <i class="material-icons prefix ">contacts</i>
        <%= f.search_field :name_or_email_or_phone_cont %>
        <button class="btn waves-effect waves-light" type="submit" name="action">
          Search
        </button>
      <% end %>
    </div>
    <div class="col s12 m4 l4"><p></p></div>
  </div>
</div>

<ul class="collapsible" data-collapsible="accordion">
  <% @customers.each do |customer| %>
    <li>
      <div class="collapsible-header">
        <div class="col s4">
          <i class="material-icons">contacts</i>
            <%= link_to customer.name, customer %>
        </div>
        <div class="col s3">
          <i class="material-icons">email</i>
            <%= link_to customer.email, customer %>
        </div>
        <div class="col s3">
          <i class="material-icons">phone</i>
            <%= link_to customer.phone, customer %>
        </div>
        <div class="right">
          <%= link_to edit_customer_path(customer) do %>
            <i class="material-icons">view_headline</i>
          <%end%>

          <%= link_to controller: "accounts", action: "new", customer: customer do %>
            <i class="material-icons">payment</i>
          <%end%>
        </div>
      </div>
    </li>
  <% end %>
</ul>
<%= will_paginate @customers %>

<a href="<%= new_customer_path %>" class="btn waves-effect waves-light" name="action">New Customer</a>
