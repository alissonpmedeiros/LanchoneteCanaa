<p id="notice"><%= notice %></p>
<%= form_for(@customer) do |f| %>
 <div class="card-panel hoverable"> 
	<div class="row">
	  <div class="col s4" style="text-align: center;">
	    <i class="material-icons prefix">account_circle</i>
		<%= f.text_field :name, class: "center-align" %>
	  </div>
	  <div class="col s4" style="text-align: center;">
	    <i class="material-icons prefix">email</i>
		<%= f.text_field :email, class: "center-align" %>
	  </div>
	  <div class="col s4" style="text-align: center;">
	    <i class="material-icons prefix">phone</i>
		<%= f.text_field :phone, class: "center-align"  %>
	  </div>
	</div>
 </div> 
<%end%> 

<div class="z-depth-3">
<h4 class="text-align: center">Accounts</h4>
<ul class="collapsible" data-collapsible="accordion">
  <% @customer.accounts.order(created_at: :desc).each do |account| %>
    <li>
      <div class="collapsible-header">
        <div class="col s4">
          <i class="material-icons">payment</i>
            <%= account.price %>
        </div>
        <div class="col s4">
          <i class="material-icons">query_builder</i>
            <%= account.created_at %>
        </div>
        <div class="col s3">
          <i class="material-icons">settings_ethernet</i>
            <%= account.status %>
        </div>
        <div class="right">
        	<%= link_to account, method: :delete, data: { confirm: 'Are you sure?' } do %>
        		<i class="material-icons">delete</i>
        	<%end%>	
          <%= link_to edit_account_path(account) do %>
            <i class="material-icons">view_headline</i>
          <%end%>
        </div>
        
      </div>
    </li>
  <% end %>
</ul>
</div>



<%= link_to controller: "accounts", action: "new", customer:         @customer do %>
  <button class="btn waves-effect waves-light" type="submit" name="action">
    New Account
  </button>
<%end%>

<a href="<%= customers_path %>" class="btn waves-effect waves-light" name="action">Back</a>




