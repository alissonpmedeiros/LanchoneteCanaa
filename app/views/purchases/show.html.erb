<p id="notice"><%= notice %></p>
<h4 class="text-align: center">Listing Purchase</h4>

<div class="card-panel hoverable">
	<div class="row">
		<div class="col s6" style="text-align: center">
		  <i class="material-icons prefix">payment</i>
		  <input type="text" class="center-align"
		  value="<%= @purchase.price %>"
		  name="purchase[price]"
		  id="purchase_price">
		</div>
		<div class="col s6" style="text-align: center">
		  <i class="material-icons prefix">query_builder</i>
		  <input type="text" class="center-align"
		  value="<%= @purchase.created_at %>"
		  name="purchase[created_at]"
		  id="purchase_created_at">	
		</div>
		<div class="col s12" style="text-align: center">
			<i class="material-icons prefix">label_outline</i>
			<input type="text"
			value="<%= @purchase.description %>"
			name="purchase[description]"
			id="purchase_description">
		</div>
	</div>
</div>

<a href="<%= edit_purchase_path(@purchase) %>" class="btn waves-effect waves-light" name="action">Edit Purchase</a>

